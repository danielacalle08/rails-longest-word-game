<h1>New game</h1>
<% @letters.each do |letter| %>
  <%= letter %>
<% end %>

<form action="/score" data-turbo="false" class="d-flex gap-1" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <p>What is the longest word you can find?</p>
  <input type="text" name="score">
  <input hidden type="text" name="letters" value="<%= @letters.join %>">
  <input type="submit" class="btn btn-primary" value="Play">
</form>
